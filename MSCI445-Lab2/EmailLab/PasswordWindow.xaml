<Window x:Class="EmailLab.PasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailLab"
        mc:Ignorable="d"
        Title="PasswordWindow" Height="211.2" Width="431.6">
    <Grid Margin="0,0,3.6,-0.4">
        <Label Content="Please enter your password:" HorizontalAlignment="Left" Margin="109,43,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password_textbox" HorizontalAlignment="Left" Margin="109,74,0,0" VerticalAlignment="Top" Width="235"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="109,128,0,0" VerticalAlignment="Top" Width="75" Click="Submit_Button_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="269,128,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Button_Click"/>

    </Grid>
</Window>

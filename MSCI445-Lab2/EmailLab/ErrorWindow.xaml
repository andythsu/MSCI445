<Window x:Class="EmailLab.ErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailLab"
        mc:Ignorable="d"
        Title="ErrorMessage" Height="211.1" Width="431.6">
	<Grid Margin="0,0,3.6,-0.4" Background="White">
		<Label
			Name="MyLabel"
			Background="White"
			HorizontalContentAlignment="Right"
			Margin="10,29,95,0"
			VerticalAlignment="Top"
			Height="94"
			Content="{Binding Path=errormessage}">
		</Label>
		<Button Content="OK" HorizontalAlignment="Left" Margin="177,128,0,0" VerticalAlignment="Top" Width="75" Click="OK_Button_Click"/>
	</Grid>
</Window>
